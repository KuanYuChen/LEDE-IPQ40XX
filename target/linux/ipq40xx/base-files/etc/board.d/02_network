#!/bin/sh
#
# Copyright (c) 2015 The Linux Foundation. All rights reserved.
# Copyright (c) 2011-2015 OpenWrt.org
#

. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

board_config_update

board=$(board_name)

case "$board" in
8dev,jalapeno |\
compex,wpj428 |\
engenius,eap1300 |\
glinet,gl-b1300 |\
openmesh,a42 |\
openmesh,a62)
	ucidef_add_switch "switch0" \
		"0@eth0" "3:lan" "4:lan"
	;;
asus,rt-ac58u |\
zyxel,nbg6617)
	ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" "wan"
	;;
avm,fritzbox-4040)
	ucidef_add_switch "switch0" \
		"0@eth0" "1:lan" "2:lan" "3:lan" "4:lan" "5:wan"
	;;
meraki,mr33 |\
netgear,ex6100v2 |\
netgear,ex6150v2 |\
zyxel,wre6606)
	ucidef_add_switch "switch0" \
		"0@eth0" "4:lan"
	;;
*)
	echo "Unsupported hardware. Network interfaces not intialized"
	;;
esac

case "$board" in
asus,rt-ac58u)
	CI_UBIPART="UBI_DEV"
	lan_mac=$(mtd_get_mac_binary_ubi Factory 4102)
	wan_mac=$(mtd_get_mac_binary_ubi Factory 20486)
	;;
avm,fritzbox-4040)
	lan_mac=$(fritz_tffs -b -n maca -i $(find_mtd_part "tffs1"))
	wan_mac=$(fritz_tffs -b -n macb -i $(find_mtd_part "tffs1"))
	;;
zyxel,nbg6617)
	base_mac=$(cat /sys/class/net/eth0/address)
	lan_mac=$(macaddr_add "$base_mac" +2)
	wan_mac=$(macaddr_add "$base_mac" +3)
	;;
esac

[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" "$lan_mac"
[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" "$wan_mac"

board_config_flush

exit 0
