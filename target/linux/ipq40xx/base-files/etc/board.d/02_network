. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

ipq40xx_setup_interfaces()
{
	local board="$1"

	case "$board" in
	8dev,jalapeno|\
	alfa-network,ap120c-ac|\
	asus,map-ac2200|\
	compex,wpj428 |\
	glinet,gl-b1300 |\
	openmesh,a42|\
	openmesh,a62)
		ucidef_set_interface_lan "lan3 lan4"
		;;
	asus,rt-ac58u|\
	avm,fritzbox-4040|\
	linksys,ea6350v3|\
	qxwlan,e2600ac-c1|\
	qxwlan,e2600ac-c2|\
	zyxel,nbg6617)
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" "wan"
		;;
	avm,fritzbox-7530)
		ucidef_set_interfaces_lan "lan1 lan2 lan3 lan4"
		;;
	engenius,eap1300|\
	meraki,mr33|\
	netgear,ex6100v2|\
	netgear,ex6150v2|\
	zyxel,wre6606)
		ucidef_set_interface_lan "lan"
		;;
	*)
		echo "Unsupported hardware. Network interfaces not initialized"
		;;
	esac
}

ipq40xx_setup_macs()
{
	local board="$1"

	case "$board" in
	asus,rt-ac58u)
		CI_UBIPART=UBI_DEV
		wan_mac=$(mtd_get_mac_binary_ubi Factory 20486)
		lan_mac=$(mtd_get_mac_binary_ubi Factory 4102)
		;;
	linksys,ea6350v3)
		wan_mac=$(mtd_get_mac_ascii devinfo hw_mac_addr)
		lan_mac=$(macaddr_add "$wan_mac" 1)
		;;
	esac

	[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" $lan_mac
	[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" $wan_mac
}

board_config_update
board=$(board_name)
ipq40xx_setup_interfaces $board
ipq40xx_setup_macs $board
board_config_flush

exit 0
